<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                    <field name="discount1" optional="hide" string="Disc.%"/>
                    <field name="discount1_store" invisible="1"/>
                    <field name="discount2" optional="hide" string="Disc2.%"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>