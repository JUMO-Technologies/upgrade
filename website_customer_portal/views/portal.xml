        <template id="my_frontend_layout" name="My Frontend layout">&lt;!DOCTYPE html&gt;
            <html t-att="html_data or {}">
                <head>
                    <meta charset="utf-8"/>
                    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>

                    <title t-esc="title or 'Odoo'"/>
                    <link type="image/x-icon" rel="shortcut icon"
                          t-att-href="x_icon or '/web/static/src/img/favicon.ico'"/>
                    <t t-call-assets="web.assets_common" t-js="false"/>
                    <t t-call-assets="web.assets_frontend" t-js="false"/>
                    <script type="text/javascript">
                        var odoo = {
                        csrf_token: "<t t-esc="request.csrf_token(None)"/>",
                        debug: "<t t-esc="debug"/>",
                        };
                    </script>
                    <script type="text/javascript">
                        odoo.session_info = <t t-raw="json.dumps(request.env['ir.http'].get_frontend_session_info())"/>;
                    </script>
                    <t t-call-assets="web.assets_common_minimal_js" t-css="false" defer_load="True"/>
                    <t t-call-assets="web.assets_frontend_minimal_js" t-css="false" defer_load="True"/>
                    <t t-call="web.conditional_assets_tests"/>
                    <t t-call-assets="web.assets_common_lazy" t-css="false" lazy_load="True"/>
                    <t t-call-assets="web.assets_frontend_lazy" t-css="false" lazy_load="True"/>
                    <t t-raw="head or ''"/>
                </head>
                <body t-att-class="body_classname">
                    <div id="wrapwrap" t-attf-class="#{pageName or ''}">
                        <t t-call="website_customer_portal.portal_delivery_layout">
                            <t t-raw="0"/>
                        </t>
                    </div>
                </body>
            </html>
        </template>

        <template id="portal_my_dashboard" name="My Dashboard">
            <t t-call="website_customer_portal.my_frontend_layout">
                <t t-set="is_portal" t-value="True"/>
                <div class="container-center-horizontal">
                    <div class="desktopinicio screen">
                        <div>
                            <div class="overlap-group1">
                                <h1 class="title-delivery montserrat-light-black-40px">
                                    Pedidos en curso
                                </h1>
                                <t t-set="index_lead" t-value="0"/>
                                <t t-foreach="leads" t-as="lead">
                                    <div class="proyecto">
                                        <div class="leal-item-value montserrat-medium-black-34px">
                                            <a t-att-href="'/my/dashboard/%s' % lead.access_token">
                                                <span class="invisible-mobile" style="color: black;">
                                                    <span t-field="lead.id"/>
                                                    <span>-</span>
                                                </span>
                                                <span style="color: black;" t-field="lead.name"/>
                                            </a>
                                        </div>
                                    </div>
                                    <t t-set="index_lead" t-value="index_lead + 1"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

